<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_foods_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece0f4"
    tools:context=".ui.fragments.FoodsDetailFragment">

    <ImageView
        android:id="@+id/foodimage_food_detail"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"
        tools:src="@tools:sample/avatars" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_swiper_food_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodimage_food_detail">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/yildiz1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/drawing"
                app:layout_constraintEnd_toStartOf="@+id/yildiz2"
                app:layout_constraintTop_toBottomOf="@+id/foodDescription" />

            <ImageView
                android:id="@+id/yildiz3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/drawing"
                app:layout_constraintEnd_toEndOf="@+id/foodDescription"
                app:layout_constraintStart_toStartOf="@+id/foodDescription"
                app:layout_constraintTop_toTopOf="@+id/yildiz1" />

            <ImageView
                android:id="@+id/yildiz4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/drawing"
                app:layout_constraintStart_toEndOf="@+id/yildiz3"
                app:layout_constraintTop_toTopOf="@+id/yildiz1" />

            <ImageView
                android:id="@+id/yildiz5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/drawing"
                app:layout_constraintStart_toEndOf="@+id/yildiz4"
                app:layout_constraintTop_toTopOf="@+id/yildiz1" />

            <ImageView
                android:id="@+id/yildiz2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/drawing"
                app:layout_constraintEnd_toStartOf="@+id/yildiz3"
                app:layout_constraintTop_toTopOf="@+id/yildiz1" />

            <TextView
                android:id="@+id/foodCountry"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.878"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/foodCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.127"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/foodDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="Brezilya mutfağının öne çıkan et kesimlerinden biridir. Sığırın sırt kısmından alınan bu et, yağlı tabakası sayesinde lezzetli ve sulu olur. Genellikle mangalda veya ızgarada pişirilir ve &quot;churrasco&quot; adı verilen Brezilya barbeküsünün vazgeçilmez bir parçasıdır. Sade tuz ile marine edilip dilimler halinde servis edilir. Picanha, dünya çapında popüler bir et kesimidir."
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textviewSuggestionForYou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="SİZİN İÇİN ÖNERİMİZ"
                android:textSize="21sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/yildiz1" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewSuggestionScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textviewSuggestionForYou">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/star1SuggestionScore"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/small_star_empty"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/star2SuggestionScore"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/small_star_empty"
                        app:layout_constraintStart_toEndOf="@+id/star1SuggestionScore"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/star3SuggestionScore"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/small_star_empty"
                        app:layout_constraintStart_toEndOf="@+id/star2SuggestionScore"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/star4SuggestionScore"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/small_star_empty"
                        app:layout_constraintStart_toEndOf="@+id/star3SuggestionScore"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/star5SuggestionScore"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/small_star_empty"
                        app:layout_constraintStart_toEndOf="@+id/star4SuggestionScore"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/progress_card_foods_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:cardBackgroundColor="#ECE0F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progressBar_food_detail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:visibility="visible" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>