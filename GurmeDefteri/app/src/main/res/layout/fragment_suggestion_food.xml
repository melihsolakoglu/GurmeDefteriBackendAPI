<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_food_suggestion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SuggestionFoodFragment">

    <TextView
        android:id="@+id/foodName_suggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/foodimage_suggestion_food"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/foodName_suggestion"
        tools:layout_editor_absoluteX="8dp"
        tools:src="@tools:sample/avatars" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_swiper_food_suggesiton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodimage_suggestion_food">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/yildiz1_suggestion"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/drawing"
                app:layout_constraintEnd_toStartOf="@+id/yildiz2_suggestion"
                app:layout_constraintTop_toBottomOf="@+id/foodDescription_suggestion" />

            <ImageView
                android:id="@+id/yildiz3_suggestion"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/drawing"
                app:layout_constraintEnd_toEndOf="@+id/foodDescription_suggestion"
                app:layout_constraintStart_toStartOf="@+id/foodDescription_suggestion"
                app:layout_constraintTop_toTopOf="@+id/yildiz1_suggestion" />

            <ImageView
                android:id="@+id/yildiz4_suggestion"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/drawing"
                app:layout_constraintStart_toEndOf="@+id/yildiz3_suggestion"
                app:layout_constraintTop_toTopOf="@+id/yildiz1_suggestion" />

            <ImageView
                android:id="@+id/yildiz5_suggestion"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/drawing"
                app:layout_constraintStart_toEndOf="@+id/yildiz4_suggestion"
                app:layout_constraintTop_toTopOf="@+id/yildiz1_suggestion" />

            <ImageView
                android:id="@+id/yildiz2_suggestion"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/drawing"
                app:layout_constraintEnd_toStartOf="@+id/yildiz3_suggestion"
                app:layout_constraintTop_toTopOf="@+id/yildiz1_suggestion" />

            <TextView
                android:id="@+id/foodCountry_suggestion"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.878"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/foodCategory_suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.127"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/foodDescription_suggestion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="Pizza Napoletana, Napoli kökenli geleneksel bir pizzadır. İnce hamuru odun fırınında pişirilir. Margherita ve Marinara en bilinen çeşitleridir. Kaliteli malzemelerle yapılan bu pizza, dünya çapında ünlüdür ve UNESCO Somut Olmayan Kültürel Miras Listesi'nde yer alır."
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textviewSuggestionForYou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="SİZİN İÇİN ÖNERİMİZ"
                android:textSize="21sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/yildiz1_suggestion" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewSuggestionScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textviewSuggestionForYou">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/star1SuggestionScore"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/small_star_empty"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/star2SuggestionScore"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/small_star_empty"
                        app:layout_constraintStart_toEndOf="@+id/star1SuggestionScore"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/star3SuggestionScore"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/small_star_empty"
                        app:layout_constraintStart_toEndOf="@+id/star2SuggestionScore"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/star4SuggestionScore"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/small_star_empty"
                        app:layout_constraintStart_toEndOf="@+id/star3SuggestionScore"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/star5SuggestionScore"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/small_star_empty"
                        app:layout_constraintStart_toEndOf="@+id/star4SuggestionScore"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_suggestion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#ECE0F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/ltAnimation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/animation_suggestion" />

            <TextView
                android:id="@+id/suggestionFoodSearching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/ltAnimation"
                app:layout_constraintStart_toStartOf="@+id/ltAnimation"
                app:layout_constraintTop_toBottomOf="@+id/ltAnimation" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>