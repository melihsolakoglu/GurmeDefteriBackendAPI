@using GurmeDefteriWebUI.Models.ViewModel.ComponentModel
<html>
<body>
    <div class="modal fade" id="successPopUp" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-light">
                    <h5 class="modal-title" id="exampleModalLabel">@TempData["PopUpTittle"]</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @TempData["PopUpMessage"]
                </div>
            </div>
        </div>
    </div>


    <script>    

        function showSuccessPopup() {
            $('#successPopUp').modal('show');
            setTimeout(function () {
                $('#successPopUp').modal('hide'); 
            }, 1750);
        }
    </script>


</body>
</html>


